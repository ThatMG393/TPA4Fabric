{
    "name": "Java",
    "image": "mcr.microsoft.com/devcontainers/base:bullseye",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "21.0.8",
            "installMaven": "false",
            "installGradle": "true",
            "jdkDistro": "graal"
        },
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    "forwardPorts": [
        6080
    ],
    "portsAttributes": {
        "6080": {
            "label": "desktop",
            "onAutoForward": "notify"
        }
    },
    "runArgs": [
        "--shm-size=1g"
    ]
}
